<div>
  <h3>Create an Event</h3>

    <%= form_for [ @user, @event ] do |f| %>
          <p>
            <%= f.label :user_id, "User ID" %><br/>
            <%= f.text_area :user_id %>
          </p>
          <p>
            <%= f.label :title %><br/>
            <%= f.text_area :title %>
          </p>
          <p>
            <%= f.label :description %><br/>
            <%= f.text_area :description %>
          </p>
          <p>
            <%= f.label :date %><br/>
            <%= f.text_area :date %>
          </p>
          <p>
            <%= f.submit 'Submit' %>
          </p>
    <% end %>
</div>
